    align-items: center;
    place-content: space-between;
    margin-bottom: 20px;
    border-top: 1px solid var(--color-oliven);
    padding-top: 10px;
  }
  #myBtn {
    margin-top: 20px;
  }

  /* desktop */
  @media (min-width: 600px) {
    .h1desktop {
      display: block;
    }
    .h1mobil {
      display: none;
    }
    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 50px;
      padding: 10px;
    }

    .valgvagt {
