    .collapsible {
      background-color: rgba(238, 238, 238, 0);
      cursor: pointer;
      padding: 18px;
      width: 100%;
      border-color: #413c1c;
      border: 1px solid;
      text-align: left;
      outline: none;
      font-size: 15px;
    }
    .content {
      padding: 10 18px;
      width: 100%;
      display: none;
      overflow: hidden;
      background-color: #f1f1f100;
      border-color: #413c1c;
      border: 1px solid;
    }

    .andrekobte {
      display: flex;
      gap: 20px;
      justify-content: center;
      padding-bottom: 50px;
      padding-top: 30px;
      place-content: space-between;
    }
    .knap {
