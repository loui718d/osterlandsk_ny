                    <label class="container"
                      ><p class="body1">GLS Direct <b> (fra 39.00 DK)</b></p>
                      <input type="radio" checked="checked" name="radio" />
                      <span class="checkmark"></span>
                    </label>
                    <label class="container"
                      ><p class="body1">
                        UPS Direct <b> (Ikke tilgængelig)</b>
                      </p>
                      <input type="radio" checked="checked" name="radio" />
                      <span class="checkmark"></span>
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <div><Oversigt levering="Beregner..." pris="56,00 DKK" /></div>
          </section>
          <div class="knapper">
            <div class="tilbage">
              <img src="/img/ikoner_logo/pil_venstre.svg" alt="pil" /><a
                href="/kurv.html">Tilbage</a
