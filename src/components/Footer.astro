    <div class="ikoner">
      <div>
        <img
          src="/img/ikoner_logo/ikoner_sociale_medier.svg"
          alt="some"
          width="138"
          height="30"
        />
      </div>
      <div>
        <img
          src="/img/ikoner_logo/ikoner_betaling.svg"
          alt="betalingskort"
          width="243"
          height="23"
        />
      </div>
      <div>
        <img
          src="/img/ikoner_logo/ikoner_kontrol_trustpilot.svg"
          alt="testimonials"
          width="141"
          height="34"
        />
      </div>
