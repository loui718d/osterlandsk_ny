<style>
  #h5 {
    font-family: "EB Garamond", serif;
    font-size: var(--font-size-mob-h5);
    color: var(--color-oliven);
    line-height: var(--line-height-mob-h4-h5);
    color: var(--color-creme);
    font-weight: 600;
  }
  #body {
    font-family: "EB Garamond", serif;
    font-size: var(--font-size-mob-body1-label-button);
    color: var(--color-creme-110);
    line-height: var(--line-height-mob-body1);
  }

  .footer_baggrund {
    background-color: var(--color-oliven-110);
    padding-top: 56px;
    padding-bottom: 56px;
    padding-right: 56px;
    padding-left: 56px;
  }

  .footer_grid {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 46px;
  }

  .ikoner {
    display: flex;
    margin-top: 46px;
    flex-direction: column;
    align-items: center;
    gap: 44px;
  }

  p {
    margin-bottom: 8px;
  }
  h5 {
    margin-bottom: 12px;
  }

  @media (min-width: 800px) {
    .h5 {
      font-family: "EB Garamond", serif;
      font-size: var(--font-size-web-h5);
      color: var(--color-creme);
      line-height: var(--line-height-web-h4-h5);
      font-weight: var(--font-weight-regular);
    }
    .body {
      font-family: "EB Garamond", serif;
      font-size: var(--font-size-web-body1-label);
      color: var(--color-creme-110);
      line-height: var(--line-height-web-body1);
    }
    .footer_grid {
      display: flex;
      flex-direction: row;
      align-items: flex-start;
      flex-wrap: wrap;
      justify-content: space-around;
      /* justify-content: center; */
      align-items: center;
      padding-bottom: 30px;
      border-bottom: 2px solid var(--color-creme);
      gap: 30px;
    }

    .ikoner {
      display: flex;
      flex-direction: row;
      /* justify-content: center; */
      align-items: center;
      justify-content: space-around;
      gap: 0;
    }
    p {
      margin-bottom: 4px;
    }
    h5 {
      margin-bottom: 15px;
    }
  }
</style>
